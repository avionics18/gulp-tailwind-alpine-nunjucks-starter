{% extends "layout.njk" %}

{# =========================================PAGE VARIABLES==================================== #}

{% set page_name = 'home' %}

{% set hero = {
    title: "Where There Is A Will, There Is A Way",
    desc: "Welcome! to the website SELF STUDY 101 - where we try to learn each & every concept in detail. We believe knowledge should be free and accessible to everyone. It's the merit of the student which should decide their fate, and nothing else should come in between."
  } 
%}

{% set features = [
    {
      title: 'Lightning Fast', 
      icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"/></svg>'
    }, 
    {
      title: 'Instant Growth', 
      icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10"><path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z"/></svg>'
    }, 
    {
      title: 'Support 24x7', 
      icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10"><path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z"/></svg>'
    }
  ] 
%}

{# ========================================================================================== #}

{% block head %}
  {% from "macros/head.njk" import title %}
  {{ title(page_name) }}
{% endblock %}

{% block loading_animation %}
  {% include "partials/pageTransition.njk" %}
{% endblock %}

{% block navigation %}
  {% from "macros/navbar.njk" import activateMenu %}
  {{ activateMenu(page_name) }}
{% endblock %}

{% block content %}
  <section class="hero bg-hero bg-no-repeat bg-center bg-cover">
    <div class="container px-8 2xl:px-36 mx-auto flex flex-col justify-center items-center h-[550px]">
      <h2 class="text-5xl font-bold font-serif capitalize mb-6">
        <span class="bg-gray-100 text-gray-900">{{ hero.title }}</span>
      </h2>
      <p class="w-4/5 text-center text-2xl font-light text-white">{{ hero.desc }}</p>
    </div>  
  </section>
  {# .hero #}

  {% include "partials/newsletter.njk" %}
  {# .newsletter #}

  <section class="features py-20">
    <div class="container px-8 2xl:px-36 mx-auto">
      <div class="grid grid-cols-3 gap-8">
        {% for ft in features %}
          <div class="card border border-gray-900 shadow-md p-8 flex flex-col items-center gap-4">
            <div class="card__icon">{{ ft.icon | safe }}</div>
            <h5 class="card__title text-2xl font-bold font-serif">{{ ft.title }}</h5>
            <p class="card__desc">Lorem ipsum dolor sit amet consectetur adipisicing elit. Rem, laborum. Ipsum nisi aliquam adipisci omnis modi laborum sed ducimus magni!</p>
          </div>
          {# .card #}
        {% endfor %}
      </div>
      {# .grid #}
    </div>
  </section>
  {# .features #}

  {% include "partials/footer.njk" %}
{% endblock %}